@model Mission_5_Hobbies_Web.Models.Calculator
<h2>Calculator</h2>

<form id="tutoringCalculatorForm">
    <div class="form-group">
        <label for="hours">Number of Hours:</label>
        <input type="number" class="form-control" id="hours" name="hours" required>
    </div>
    <div class="form-group">
        <label>Hourly Rate:</label>
        <input type="text" class="form-control">
    </div>
    <button type="button" id="calculateButton" class="btn btn-primary">Calculate Total</button>
</form>

<p>Total: $<span id="total"></span></p>

<a href="@Url.Action("Index", "Home")">Back to Home</a>

@section Scripts {
    <script src="~/path/to/your/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#calculateButton').click(function () {
                var hours = $('#hours').val();
                var rate = @Model.HourlyRate;
                if (hours > 0) {
                    var total = hours * rate;
                    $('#total').text(total.toFixed(2));
                } else {
                    alert("Please enter a positive number of hours.");
                }
            });
        });
    </script>
}